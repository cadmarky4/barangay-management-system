APP_NAME="LGU IMS"
APP_ENV=production
APP_KEY=base64:your-key-will-be-generated
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database - Render will provide these automatically
DB_CONNECTION=mysql
DB_HOST=${DATABASE_HOST}
DB_PORT=${DATABASE_PORT}
DB_DATABASE=${DATABASE_NAME}
DB_USERNAME=${DATABASE_USER}
DB_PASSWORD=${DATABASE_PASSWORD}

# Or use DATABASE_URL if provided by Render
# DATABASE_URL=${DATABASE_URL}

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# CORS settings for frontend
SANCTUM_STATEFUL_DOMAINS=your-frontend.vercel.app,localhost:3000

MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@lgu-ims.com"
MAIL_FROM_NAME="${APP_NAME}"